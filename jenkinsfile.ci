pipeline {
    agent any

    environment {
        // PLAYWRIGHT_VERSION = '1.41.1-jammy'
        PLAYWRIGHT_VERSION = '1.49.1'
    }

    tools {
        // nodejs 'NodeJS 20.9'
        nodejs 'NodeJS 20.10.0'
    }
    
    stages {
        stage('playwright') {
            steps {
                sh '''
                    npm i -D @playwright/test@1.49.1
                '''
            }
        }  
        stage('test') {
            steps {
                sh '''
                    npx playwright test demoproj.spec.ts --project chromium --reporter=line
                '''
            }
        }
    }
    
}